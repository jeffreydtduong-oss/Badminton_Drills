<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shuttle Number Range -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuttle Number Range"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/minShuttleNumberEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="1"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/maxShuttleNumberEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="4"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg" />

        </LinearLayout>

        <!-- Number Display Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Display Time (seconds)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/numberDisplayTimeEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="0.5"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg" />

        </LinearLayout>

        <!-- Time to Shuttle Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to Shuttle (seconds)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/timeToShuttleMinEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="1.0"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/timeToShuttleMaxEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="3.0"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg" />

        </LinearLayout>

        <!-- Time to Center Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Back to Center (seconds)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/timeToCenterMinEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="1.0"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/timeToCenterMaxEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="2.0"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg" />

        </LinearLayout>

        <!-- Rep Configuration Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rep Configuration"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/repModeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/infiniteRepsRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't stop (infinite reps)"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/fixedRepsRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do for specified amount of reps:"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Reps:"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/targetRepsEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:text="10"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edit_text_bg" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>